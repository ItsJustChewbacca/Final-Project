    <script>
      $(function() {
      // Smooth Scrolling
        $('a[href*="#"]:not([href="#"])').click(function() {
          if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
            var target = $(this.hash);
            target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
            if (target.length) {
              $('html, body').animate({
                scrollTop: target.offset().top
              }, 1000);
              return false;
            }
          }
        });
        $(window).scroll(function() {
          let scrollLength = $(this).scrollTop();
          if(scrollLength >= $('#showcase').offset().top - 50 && scrollLength <= $('#about').offset().top - 50) {
            $('.navbar').find('li>a').removeClass('active')
            $('.navbar').find('li:nth-of-type(2)>a').addClass('active')
          }
          else if(scrollLength >= $('#about').offset().top - 50 && scrollLength <= $('#how-it-works').offset().top - 50) {
            $('.navbar').find('li>a').removeClass('active')
            $('.navbar').find('li:nth-of-type(3)>a').addClass('active')
          }
          else if(scrollLength >= $('#how-it-works').offset().top - 50 && scrollLength <= $('#benefits').offset().top - 50) {
            $('.navbar').find('li>a').removeClass('active')
            $('.navbar').find('li:nth-of-type(4)>a').addClass('active')
          }
          else if(scrollLength >= $('#benefits').offset().top - 50 && scrollLength <= $('#contact').offset().top - 200) {
            $('.navbar').find('li>a').removeClass('active')
            $('.navbar').find('li:nth-of-type(5)>a').addClass('active')
          }
